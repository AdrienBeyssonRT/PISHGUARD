# Variables d'environnement pour Docker Compose
# Généré automatiquement par Ansible

# Secrets (générés automatiquement)
JWT_SECRET={{ jwt_secret }}
TRACKING_ENC_KEY={{ tracking_enc_key }}

# URLs
FRONTEND_URL={{ frontend_url }}

# Email Provider (optionnel)
SENDGRID_API_KEY={{ sendgrid_api_key | default('') }}
FROM_EMAIL={{ from_email | default('noreply@phishguard.com') }}

# OAuth (optionnel)
GOOGLE_CLIENT_ID={{ google_client_id | default('') }}
GOOGLE_CLIENT_SECRET={{ google_client_secret | default('') }}
MICROSOFT_CLIENT_ID={{ microsoft_client_id | default('') }}
MICROSOFT_CLIENT_SECRET={{ microsoft_client_secret | default('') }}


